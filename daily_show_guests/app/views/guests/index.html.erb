          ["2000", 0, 99, 1, 3, 1, 0, 12, 0, 0, 21, 0, 0, 13, 4, 1, 13, 0],
          ["2001", 2, 92, 0, 1, 0, 0, 11, 0, 2, 31, 0, 2, 11, 1, 1, 3, 0],
          ["2002", 0, 84, 1, 2, 0, 1, 5, 0, 1, 42, 0, 1, 10, 2, 2, 8, 0],
          ["2003", 4, 74, 0, 0, 0, 1, 12, 1, 2, 41, 0, 1, 7, 6, 1, 14, 1],
          ["2004", 1, 50, 4, 2, 2, 1, 7, 4, 3, 45, 0, 0, 5, 3, 2, 32, 2],
          ["2005", 12, 44, 0, 2, 1, 0, 5, 1, 1, 54, 1, 4, 11, 0, 3, 22, 1],
          ["2006", 9, 44, 0, 5, 1, 0, 8, 4, 3, 47, 1, 3, 6, 1, 3, 25, 1],
          ["2007", 13, 25, 2, 4, 2, 1, 9, 2, 1, 47, 3, 2, 2, 1, 2, 21, 4],
          ["2008", 5, 25, 3, 1, 1, 0, 7, 3, 0, 77, 1, 2, 1, 3, 6, 27, 1],
          ["2009", 11, 22, 1, 7, 4, 1, 7, 2, 5, 59, 1, 5, 5, 0, 3, 26, 4],
          ["2010", 8, 45, 1, 5, 2, 0, 7, 1, 3, 50, 2, 4, 6, 1, 2, 25, 3],
          ["2011", 10, 40, 1, 2, 3, 1, 7, 0, 3, 51, 3, 5, 6, 0, 1, 23, 5],
          ["2012", 8, 33, 2, 7, 3, 2, 6, 0, 3, 50, 1, 6, 5, 4, 1, 29, 2],
          ["2013", 8, 57, 2, 4, 3, 0, 6, 0, 7, 49, 1, 2, 5, 1, 3, 11, 2],
