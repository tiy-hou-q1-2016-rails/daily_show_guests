<div class="container">
  <div class="page-header">
    <h1>Daily Show Guests <small>data from fivethirtyeight</small></h1>
  </div>
</div>
<%= render "shared/search" %>
<div class="container">
  <% if @guests.empty? %>
  <div class="alert alert-info">
    <em>No Contacts Found for "<%= params[:search_text] %>"</em>
  </div>
  <% elsif params[:search_text] == nil %>
    <p>
      <em><%= pluralize @guests.count, 'guest' %> found</em>
    </p>
  <% else %>
    <p>
      <em><%= pluralize @guests.count, 'guest' %> found for "<%= params[:search_text] %>"</em>
    </p>
  <% end %>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>
          Guest Name
        </th>
        <th>
          Year
        </th>
        <th>
          Air Date
        </th>
        <th>
          Specific Occupation
        </th>
        <th>
          General Occupation (Group)
        </th>
      </tr>
    </thead>
    <tbody>
      <% @guests.each do |guest| %>
        <tr>
          <td>
            <%= guest.name %>
          </td>
          <td>
            <%= guest.year %>
          </td>
          <td>
            <%= guest.show_date %>
          </td>
          <td>
            <%= guest.occupation %>
          </td>
          <td>
            <%= guest.occupation_group %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
